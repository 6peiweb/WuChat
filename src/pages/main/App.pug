#app
  mt-header(fixed :title='selectedHead[selectedTab]')
    mt-button(icon='search' slot='right')
  mt-tabbar(fixed v-model='selectedTab')
    mt-tab-item(v-for='item in tablist' :id='item.id' :key='item.id' :to='item.id')
      img(slot='icon' :src='getImgSrc(item.imgSrc)')
      span {{ item.title }}
      div.router-link
        router-link(:to='item.id')
  keep-alive
    transition(name='fade')
      router-view
